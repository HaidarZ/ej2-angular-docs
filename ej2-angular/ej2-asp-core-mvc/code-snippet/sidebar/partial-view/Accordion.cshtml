@using Syncfusion.EJ2

<table class="table">
    <div id="top-bar">
        <div class="component">
            <span class="header">Components</span>
            <span><i class="fa fa-angle-right" style="font-size:16px"></i></span>
            <span class="header">Navigations</span>
            <span><i class="fa fa-angle-right" style="font-size:16px"></i></span>
            <span class="header">Accordion</span>
        </div>
