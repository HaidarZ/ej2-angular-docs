<script>
    function onSelect(args){
        if (args.item.text === 'Other Folder...') {
            ej.base.getInstance(document.getElementById('dialog'), ejs.popups.Dialog).show();
        }
    }
    function btnClick () {
        ej.base.getInstance(document.getElementById('dialog'), ejs.popups.Dialog).hide();
    }
</script>
