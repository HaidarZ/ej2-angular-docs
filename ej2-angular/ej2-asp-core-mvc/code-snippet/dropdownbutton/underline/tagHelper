<ejs-dropdownbutton id="ddbtn" items="ViewBag.items" content="Clipboard" beforeItemRender="itemRender"></ejs-dropdownbutton>

<script>
function itemRender(args){
    if (args.item.text === 'Copy') {
        // To underline a particular text.
        args.element.innerHTML = '<u>C</u>opy';
    }
}
</script>
