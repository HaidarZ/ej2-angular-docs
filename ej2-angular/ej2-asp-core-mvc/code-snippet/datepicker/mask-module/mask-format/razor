        <div class="control_wrapper">
            <div class="pane">
                <div class="tabs-wrap">
                    <div class="wrap">
                        // Specifies the masked DatePicker without format property.
                        @Html.EJS().DatePicker("element").EnableMask("true").Render()
                    </div>
                </div>
                <div class="tabs-wrap">
                    <div class="wrap">
                       // Specifies the masked DatePicker with format.
