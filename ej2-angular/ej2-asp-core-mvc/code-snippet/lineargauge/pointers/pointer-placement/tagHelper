@using Syncfusion.EJ2;
<ejs-lineargauge id="linear" load="gaugeLoad"></ejs-lineargauge>
<script>
    window.gaugeLoad = function (args) {
        var axis = args.gauge.axes[0];
        axis.pointers = [{
            value: 60,
            markerType: 'Arrow',
            color: '#f44141',
            placement: 'Near'
        }]
    }
</script>