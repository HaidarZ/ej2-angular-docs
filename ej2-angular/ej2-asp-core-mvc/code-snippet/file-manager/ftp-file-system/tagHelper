                    downloadUrl="http://localhost:{port}/api/FTPProvider/FTPDownload"
                    uploadUrl="http://localhost:{port}/api/FTPProvider/FTPUpload"
                    getImageUrl="http://localhost:{port}/api/FTPProvider/FTPGetImage">
            </e-filemanager-ajaxsettings>
        </ejs-filemanager>
